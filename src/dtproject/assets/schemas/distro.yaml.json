{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$comment": "Schema for /dtproject/distro.yaml file",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "Name of the distribution this project belongs to (e.g., daffy, ente, ...)",
            "pattern": "^[a-z]+$"
        }
    },
    "required": ["name"],
    "additionalProperties": false
}